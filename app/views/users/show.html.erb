<main class="form__wrapper">
  <div class="statistics">
    <h3>
      <% unless current_user.stage_name == "" %>
        <%= "#{current_user.stage_name}さん" %>
      <% else %>
        <%= "#{current_user.name}さん" %>
      <% end %>
      (俳優番号<%= @code %>)
    </h3>
    <div>
      <div class="grade1">
          <div>
            <% if @sheet.cell(1,'U') == "SP" %>
              <span class="emp-top"><%= "ランク：#{@sheet.cell(1,'U')}" %></span>
            <% elsif @sheet.cell(1,'U') == "S" %>
              <span class="emp-middle"><%= "ランク：#{@sheet.cell(1,'U')}" %></span>
            <% else %>
              <span class="emp"><%= "ランク：#{@sheet.cell(1,'U')}" %></span>
            <% end %>
          </div>

          <div>
            <% if @sheet.cell(1,'V') == "レジェンド" || @sheet.cell(1,'V') == "カリスマ" || @sheet.cell(1,'V') == "マスター" %>
              <span class="emp-top"><%= @sheet.cell(1,'V') %></span>
            <% elsif @sheet.cell(1,'V') == "スター" || @sheet.cell(1,'V') == "エース" %></span>
              <span class="emp-middle"><%= @sheet.cell(1,'V') %></span>
            <% else %>
              <span class="emp"><%= @sheet.cell(1,'V') %>
            <% end %>
          </div>

          <div>
            <% if @sheet.cell(1,'W').to_i < 5 %>
              <span class="emp-top emphasis"><%= @sheet.cell(1,'W') %></span>
            <% elsif @sheet.cell(1,'W').to_i < 10 %>
              <span class="emp-middle emphasis"><%= @sheet.cell(1,'W') %></span>
            <% else %>
              <span class="emp emphasis"><%= @sheet.cell(1,'W') %></span>
            <% end %>
          </div>

          <div>
            <%= "位/#{@sheet.cell(1,'X')}人中" %>
          </div>
      </div>
      <p class="grade2">
      <%= "現在のMP：#{@sheet.cell(2,'X')}" %>
      </p>
      <p class="grade3">
        <%= "MP#{@sheet.cell(2,'W')}になると次のランクに上がります！" %>
      </p>
    </div>
  </div>

  <div class="detail">
    <table border="1">
        <tr class="title1 fixed">
          <th colspan="17"><%= @sheet.cell(1,'C') %></th>
          <th width="65"><%= @sheet.cell(1,'U') %></th>
          <th width="65"><%= @sheet.cell(1,'V') %></th>
          <th width="65"><%= @sheet.cell(1,'W') %></th>
        </tr>
        <tr class="title2 fixed">
          <th width="65"><%= @sheet.cell(2,'D') %></th>
          <th colspan="2"><%= @sheet.cell(2,'F') %></th>
          <th width="100"><%= @sheet.cell(2,'G') %></th>
          <th width="65"><%= @sheet.cell(2,'H') %></th>
          <th width="65"><%= @sheet.cell(2,'I') %></th>
          <th width="40"><%= @sheet.cell(2,'J') %></th>
          <th width="65"><%= @sheet.cell(2,'K') %></th>
          <th width="65"><%= @sheet.cell(2,'L') %></th>
          <th width="65"><%= @sheet.cell(2,'M') %></th>
          <th width="65"><%= @sheet.cell(2,'N') %></th>
          <th width="65"><%= @sheet.cell(2,'O') %></th>
          <th width="65"><%= @sheet.cell(2,'P') %></th>
          <th width="65"><%= @sheet.cell(2,'Q') %></th>
          <th width="65"><%= @sheet.cell(2,'R') %></th>
          <th width="65"><%= @sheet.cell(2,'S') %></th>
          <th width="65"><%= @sheet.cell(2,'T') %></th>
          <th width="65"><%= @sheet.cell(2,'U') %></th>
          <th width="65"><%= @sheet.cell(2,'V') %></th>
          <th width="65"><%= @sheet.cell(2,'W') %></th>
        </tr>
        <tr class="title3 fixed">
          <th colspan="7"><%= @sheet.cell(3,'A') %></th>
          <th colspan="3" class="venue"><%= @sheet.cell(3,'K') %></th>
          <th colspan="3" class="stream"><%= @sheet.cell(3,'N') %></th>
          <th colspan="3" class="total"><%= @sheet.cell(3,'Q') %></th>
          <th colspan="3" class="audience"><%= @sheet.cell(3,'T') %></th>
          <th width="65"><%= @sheet.cell(3,'W') %></th>
        </tr>
        <tr class="title4 fixed">
          <th width="65"><%= @sheet.cell(4,'C') %></th>
          <th colspan="2"><%= @sheet.cell(4,'F') %></th>
          <th width="100"><%= @sheet.cell(4,'G') %></th>
          <th width="65"><%= @sheet.cell(4,'H') %></th>
          <th width="65"><%= @sheet.cell(4,'I') %></th>
          <th width="40"><%= @sheet.cell(4,'J') %></th>
          <th width="65" class="venue"><%= @sheet.cell(4,'K') %></th>
          <th width="65" class="venue"><%= @sheet.cell(4,'L') %></th>
          <th width="65" class="venue"><%= @sheet.cell(4,'M') %></th>
          <th width="65" class="stream"><%= @sheet.cell(4,'N') %></th>
          <th width="65" class="stream"><%= @sheet.cell(4,'O') %></th>
          <th width="65" class="stream"><%= @sheet.cell(4,'P') %></th>
          <th width="65" class="total"><%= @sheet.cell(4,'Q') %></th>
          <th width="65" class="total"><%= @sheet.cell(4,'R') %></th>
          <th width="65" class="total"><%= @sheet.cell(4,'S') %></th>
          <th width="65" class="audience"><%= @sheet.cell(4,'T') %></th>
          <th width="65" class="audience"><%= @sheet.cell(4,'U') %></th>
          <th width="65" class="audience"><%= @sheet.cell(4,'V') %></th>
          <th width="65"><%= @sheet.cell(4,'W') %></th>
        </tr>
      <% @last.times do |num|%>
        <tr class="detail-data">
          <td width="65"><%= @sheet.cell(num+5,'C') %></td>
          <td width="65"><%= @sheet.cell(num+5,'E') %></td>
          <td width="90"><%= @sheet.cell(num+5,'F') %></td>
          <td width="100"><%= truncate(@sheet.cell(num+5,'G'), length: 8) %></td>
          <td width="65"><%= @sheet.cell(num+5,'H') %></td>
          <td width="65"><%= @sheet.cell(num+5,'I') %></td>
          <td width="40"><%= @sheet.cell(num+5,'J') %></td>
          <td width="65" class="venue"><%= @sheet.cell(num+5,'K') %></td>
          <td width="65" class="venue"><%= @sheet.cell(num+5,'L') %></td>
          <td width="65" class="venue"><%= @sheet.cell(num+5,'M') %></td>
          <td width="65" class="stream"><%= @sheet.cell(num+5,'N') %></td>
          <td width="65" class="stream"><%= @sheet.cell(num+5,'O') %></td>
          <td width="65" class="stream"><%= @sheet.cell(num+5,'P') %></td>
          <td width="65" class="total"><%= @sheet.cell(num+5,'Q') %></td>
          <td width="65" class="total"><%= @sheet.cell(num+5,'R') %></td>
          <td width="65" class="total"><%= @sheet.cell(num+5,'S') %></td>
          <td width="65" class="audience"><%= @sheet.cell(num+5,'T') %></td>
          <td width="65" class="audience"><%= @sheet.cell(num+5,'U') %></td>
          <td width="65" class="audience"><%= @sheet.cell(num+5,'V') %></td>
          <td width="65"><%= @sheet.cell(num+5,'W') %></td>
        </tr>
      <% end %>
    </table>
  </div>
</main>