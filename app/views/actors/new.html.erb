<div class="form__wrapper inner ">
  <%= form_with model: [current_user, @actor], local: true do |f| %>

    <%= render 'shared/error_messages',{ model: f.object} %>
    <div class="actor">
      <h2>
      俳優情報
      </h2>
      <div class="form">
        <div class="image-form">
          <div class="form-lavel">
            <h4>画像（必須）</h4>
          </div>
          <%= f.file_field :image, class:"actor-image" %>
        </div>

        <div class="comment-form">
          <div class="form-lavel">
            <h4>コメント</h4>
          </div>
          <%= f.text_area :comment, class:"comment-input" %>
        </div>
      </div> 

      <div class="actions">
        <%= f.submit "作成する", class: :form__btn  %>
      </div>

    </div>

  <% end %>
</div>