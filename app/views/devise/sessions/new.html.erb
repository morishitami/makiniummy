<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h3 class="page-heading">ユーザーログイン</h3>
        <%= form_with model:@user, url: user_session_path, local: true do |f| %>

          <%= flash[:alert] %>

        <div class="field">
          <%= f.label :code, "俳優番号" %><br />
          <%= f.text_field :code, class: :form__code, id:"code", maxlength:"4", placeholder:"半角数字", autofocus: true %>
        </div>
        
        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "current-password", placeholder:"6文字以上の半角英数字" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>