<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h3 class="page-heading">ユーザー新規登録</h3>

        <%= form_with model:@user, url: user_registration_path, local: true do |f| %>

          <%= render 'shared/error_messages',{ model: f.object} %>

        <div class="field">
          <%= f.label :code, "俳優番号" %><br />
          <%= f.text_field :code, class: :form__code, id:"code", maxlength:"4", placeholder:"半角数字", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :name, "本名" %><br />
          <%= f.text_field :name, id:"user_name", placeholder:"例) 鈴木太郎" %>
        </div>

        <div class="field">
          <%= f.label :stage_name, "芸名(任意)" %><br />
          <%= f.text_field :stage_name, id:"stage_name", placeholder:"本名と異なる場合は入力してください" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス  ※一度登録したことのあるアドレスは使用できません" %><br />
          <%= f.email_field :email, id:"user_email", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード  ※英字と数字の両方を含めて設定してください" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password", placeholder:"6文字以上の半角英数字" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password", placeholder:"同じパスワードを入力" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>